{
    "compilerOptions": {
        "target": "es2018",
        "lib": [
            "es5",
            "es2015",
            "es2016",
            "es2017",
            "es2018",
            "dom"
        ],
        "sourceMap": true,
        "paths": {
            "@async/*": ["./src/methods/async/*"],
            "@sync/*": ["./src/methods/sync/*"],
            "@utils/*": ["./src/utils/*"],
            "@wrappers/*": ["./src/wrappers/*"],
        },
        "experimentalDecorators": true,
        "noEmitHelpers": true,
        "strict": true
    }
}